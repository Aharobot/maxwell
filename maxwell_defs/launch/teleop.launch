<launch>

  <node name="joy" pkg="joy" type="joy_node"/>

  <node name="teleop" pkg="teleop_twist_joy" type="teleop_node">
    <param name="axis_linear" value="3"/> 
    <param name="axis_angular" value="0"/> 
    <param name="scale_linear" value="0.5"/>
    <param name="scale_linear_turbo" value="0.5"/> 
    <param name="scale_angular" value="2.0"/>
    <param name="enable_button" value="10"/><!--L1 shoulder button--> 
    <param name="enable_turbo_button" value="10"/><!--L2 shoulder button--> 
  </node>

  <node name="cmd_vel_mux" pkg="topic_tools" type="mux" respawn="true" args="base_controller/command /cmd_vel /teleop/cmd_vel">
    <remap from="mux" to="cmd_vel_mux" />
  </node>

</launch>
